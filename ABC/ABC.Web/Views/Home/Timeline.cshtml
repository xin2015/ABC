@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>我的 ASP.NET 应用程序</title>
    <style>
        .timeline {
            height: 35px;
            padding: 5px 0;
            margin: 5px;
            background: rgba(0, 0, 0, 0.84);
            text-align: center;
        }

        .timeline-control {
            float: left;
        }

            .timeline-control div {
                float: left;
                width: 35px;
                height: 35px;
                margin: 0 5px;
                cursor: pointer;
            }

        .timeline-control-prev {
            background: url(/Scripts/Timeline/images/prev.png);
        }

            .timeline-control-prev:hover {
                background: url(/Scripts/Timeline/images/prev_hover.png);
            }

        .timeline-control-play {
            background: url(/Scripts/Timeline/images/play.png);
        }

            .timeline-control-play:hover {
                background: url(/Scripts/Timeline/images/play_hover.png);
            }

        .timeline-control-pause {
            background: url(/Scripts/Timeline/images/pause.png);
        }

            .timeline-control-pause:hover {
                background: url(/Scripts/Timeline/images/pause_hover.png);
            }

        .timeline-control-next {
            background: url(/Scripts/Timeline/images/next.png);
        }

            .timeline-control-next:hover {
                background: url(/Scripts/Timeline/images/next_hover.png);
            }

        .timeline-slider {
            float: left;
        }

        .timeline-slider-bar {
            border-radius: 2px;
            background-color: rgba(255, 255, 255, 0.42);
        }

        .timeline-slider-bar-progress {
            width: 175px;
            height: 7px;
            background-color: #00e5ff;
            border-radius: 2px;
            box-shadow: 2px 0 6px #00e5ff;
        }

        .timeline-slider-content-scale {
            float: left;
            width: 351px;
            color: white;
        }

        .timeline-slider-content-scale-mark {
            display: inline-block;
            position: relative;
            height: 10px;
            top: -7px;
            border-left: 1px solid #eee;
        }

        .timeline-slider-content-scale-label {
            position: relative;
            top: -10px;
        }
    </style>
</head>
<body>
    <div style="height:100px;"></div>
    <div id="timeline" class="timeline">
        <div class="timeline-control">
            <div class="timeline-control-prev"></div>
            <div class="timeline-control-play"></div>
            <div class="timeline-control-next"></div>
        </div>
        <div class="timeline-slider">
            <div class="timeline-slider-bar">
                <div class="timeline-slider-bar-progress"></div>
            </div>
            <div class="timeline-slider-content">
                @for (int i = 0; i < 5; i++)
                {
                    <div class="timeline-slider-content-scale">
                        <span class="timeline-slider-content-scale-mark"></span>
                        <div class="timeline-slider-content-scale-label">@string.Format("time{0}", i)</div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div id="test"></div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".timeline-control div").click(function () {
                switch (this.className) {
                    case "timeline-control-prev": {
                        console.log(this.className);
                        break;
                    }
                    case "timeline-control-next": {
                        console.log(this.className);
                        break;
                    }
                    case "timeline-control-play": {
                        console.log(this.className);
                        $(this).attr("class", "timeline-control-pause");
                        break;
                    }
                    case "timeline-control-pause": {
                        console.log(this.className);
                        $(this).attr("class", "timeline-control-play");
                        break;
                    }
                    default: {
                        break;
                    }
                }
            });
        });
    </script>
</body>
</html>
