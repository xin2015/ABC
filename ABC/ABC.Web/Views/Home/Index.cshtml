        .timeline {
            height: 35px;
            padding: 3px 0;
            background: rgba(0, 0, 0, 0.84);
        }

        .timeline-control {
            float: left;
        }

            .timeline-control div {
                width: 35px;
                height: 35px;
                margin: 0 10px;
